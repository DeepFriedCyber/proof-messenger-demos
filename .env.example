# Environment Configuration for Proof Messenger
# Copy this file to .env and customize for your deployment

# =============================================================================
# Application Configuration
# =============================================================================

# Relay Server Configuration
RELAY_PORT=8080
RUST_LOG=info
RUST_BACKTRACE=1

# Web Application Configuration
WEB_PORT=80

# =============================================================================
# Domain Configuration (for production with SSL)
# =============================================================================

# Domain names for SSL certificates
WEB_DOMAIN=localhost
RELAY_DOMAIN=relay.localhost

# Let's Encrypt email for SSL certificates
ACME_EMAIL=admin@localhost

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Prometheus monitoring
PROMETHEUS_PORT=9090

# Grafana dashboard
GRAFANA_PORT=3000
GRAFANA_PASSWORD=secure_admin_password

# Traefik logging level (DEBUG, INFO, WARN, ERROR)
TRAEFIK_LOG_LEVEL=WARN

# =============================================================================
# Development Configuration
# =============================================================================

# Development server port
DEV_WEB_PORT=8000

# Enable debug logging in development
DEV_RUST_LOG=debug

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret (if implementing authentication)
# JWT_SECRET=your-super-secret-jwt-key-here

# CORS origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# Database Configuration (if adding persistence)
# =============================================================================

# PostgreSQL configuration
# DATABASE_URL=postgresql://username:password@localhost:5432/proof_messenger
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=proof_messenger
# DB_USER=proof_messenger
# DB_PASSWORD=secure_database_password

# Redis configuration (for caching/sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# =============================================================================
# Performance Configuration
# =============================================================================

# Worker threads for Rust applications
# TOKIO_WORKER_THREADS=4

# Maximum request size (in bytes)
# MAX_REQUEST_SIZE=1048576

# Request timeout (in seconds)
# REQUEST_TIMEOUT=30

# =============================================================================
# Deployment Configuration
# =============================================================================

# Docker registry for custom images
# DOCKER_REGISTRY=your-registry.com

# Image tags
# RELAY_IMAGE_TAG=latest
# WEB_IMAGE_TAG=latest

# Deployment environment
# ENVIRONMENT=production

# Health check intervals (in seconds)
# HEALTH_CHECK_INTERVAL=30
# HEALTH_CHECK_TIMEOUT=10
# HEALTH_CHECK_RETRIES=3